generator client {
  provider        = "prisma-client-js"
  // previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  relationMode = "prisma"
}

model ShortURL {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  url       String?  @db.VarChar(2000)

  slug String @unique

  @@index(slug)

  // User      User[]
}

